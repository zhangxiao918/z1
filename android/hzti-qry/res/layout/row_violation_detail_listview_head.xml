<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/main_violation_head_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/main_violation_head_default_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_main_violation_head_black_gradient"
        android:paddingBottom="5.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="16.0dip"
        android:paddingTop="10.0dip" >

        <LinearLayout
            android:id="@+id/tmp01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/main_violation_head_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江西全省"
                android:textColor="#ffffffff"
                android:textSize="22.0sp" />

            <TextView
                android:id="@+id/main_violation_head_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:text="共0条违章"
                android:textColor="#ffffffff"
                android:textSize="13.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/main_violation_head_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/main_violation_head_refresh"
            android:layout_toRightOf="@id/tmp01"
            android:gravity="center"
            android:text="还没有更新"
            android:textColor="#ffaaa1a1"
            android:textSize="13.0sp" />

        <ImageView
            android:id="@+id/main_violation_head_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/main_violation_refresh_icon" />
    </RelativeLayout>

</RelativeLayout>